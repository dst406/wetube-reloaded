extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="제목", required, type="text", name="title", maxlength=80)
        input(placeholder="설명", required, type="text", name="description", minlength=20)
        input(placeholder="해시태그, 콤마로 구분함.", required, type="text", name="hashtags")
        input(type="submit" value="Upload Video")