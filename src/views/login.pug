extends base.pug


block content 
    if errorMessage 
        script.
            alert("#{errorMessage}")
    form(method="POST")
        input(placeholder="아이디", name="username", type="text", required)
        input(placeholder="비밀번호", name="password", type="text", required)
        input(type="submit", value="Login")
        br
        a(href="/users/github/start") Github로 로그인하기 &rarr;
        div 
            span 아직 회원이 아니세요? 
            a(href="/join") 계정 생성하기 &rarr;