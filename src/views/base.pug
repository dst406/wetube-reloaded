doctype html
html(lnag="ko")
    head
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle 
            nav 
                ul 
                    li 
                        a(href="/") Home
                    if loggedIn
                        li 
                            a(href="/videos/upload") 영상 업로드
                        li 
                            a(href="/users/edit") 회원정보 수정
                        li 
                            a(href="/users/logout") 로그아웃
                    else
                        li 
                            a(href="/join") 회원가입
                        li
                            a(href="/login") 로그인
                    li
                        a(href="/search") 검색
                    
        main
            block content
    include partials/footer.pug