extends base.pug

block content
    h4 비디오 업데이트
    form(method="POST")
        input(name="title", placeholder="비디오 제목", value=video.title, required)
        input(placeholder="설명", required, type="text", name="description", minlength=20, value=video.description)
        input(placeholder="해시태그, 콤마로 구분.", required, type="text", name="hashtags", value=video.hashtags.join())
        input(value="Save", type="submit")